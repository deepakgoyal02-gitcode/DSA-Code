public class BinarySearch {
    public static int binarySearch(int[] arr, int target) {
        int low = 0;
        int high = arr.length - 1;

        while (low <= high) { //low should never be greater than high if it is that means value not found
            int mid = (low + high) / 2;

            if (arr[mid] == target) {
                return mid; // Target found
            } else if (arr[mid] < target) {
                low = mid + 1; // Search in the right half
            } else {
                high = mid - 1; // Search in the left half
            }
        }
        return -1; // Target not found
    }
    public static void main(String[] args) {
        int[] sortedArray = {3, 6, 9, 12, 15, 18, 21};
        int targetValue = 23;
        int result = binarySearch(sortedArray, targetValue);
        for(int i = 0;i<sortedArray.length;i++)
        {
            System.out.print(sortedArray[i] + " ");
        }
        System.out.println();
        System.out.println("Search Element is : " + targetValue);
        if (result != -1) {
            System.out.println("Search Element " + targetValue + " found at location: " + (result+1));
        } else {
            System.out.println("Search Element not found in the array.");
        }
    }
}
