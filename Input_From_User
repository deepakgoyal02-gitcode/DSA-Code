import java.util.Scanner;

public class myScan {
    public static void main(String[] args) {
        Scanner myChoice = new Scanner(System.in);
        boolean quit = false;
        System.out.print("Enter First Value: ");
        int value1 = myChoice.nextInt();
        myChoice.nextLine();
        System.out.print("Enter Second Value: ");
        System.out.println("Enter your name");
        int value2 = myChoice.nextInt();
        String name = myChoice.next();
        myChoice.nextLine();
        int result;
        while(!quit)
        {
            System.out.println("Enter Your Choice");
            System.out.println("" +
                    "1. Add \n" +
                    "2. Subtract \n" +
                    "3. Multiply \n" +
                    "4. Divide \n" +
                    "5. Quit");
            int ch = myChoice.nextInt();
            myChoice.nextLine();

            switch (ch){
                case 1:
                    System.out.println(value1 + value2);
                    break;
                case 2:
                    System.out.println(value1 - value2);
                    break;
                case 3:
                    System.out.println(value1 * value2);
                    break;
                case 4:
                    System.out.println(value1 / value2);
                    break;
                case 5:
                    quit = true;
                    break;
                default:
                    quit = true;
                    break;
            }
        }
    }
}
